<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Serialize object array until</Title>
      <Description>Serialize object array until</Description>
      <Shortcut>seroau</Shortcut>
    </Header>
    <Snippet>
      <Code Language="CSharp" Kind="method body">
        <![CDATA[$Property$ = s.SerializeObjectArrayUntil<$Type$>($Property$, x => $Condition$, name: nameof($Property$));$end$]]>
      </Code>
      <Declarations>
        <Literal>
          <ID>Property</ID>
          <ToolTip>Choose the property to serialize</ToolTip>
          <Default>Property</Default>
        </Literal>
        <Literal>
          <ID>Type</ID>
          <ToolTip>Choose the property type</ToolTip>
          <Default>Type</Default>
        </Literal>
        <Literal>
          <ID>Condition</ID>
          <ToolTip>Choose the condition for the array to end</ToolTip>
          <Default>Condition</Default>
        </Literal>
      </Declarations>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>